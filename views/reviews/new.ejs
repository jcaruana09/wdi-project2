<h2>New Review</h2>

<div class="row">
  <form class="col s12" action="new" method="post">
    <div class="row">
      <div class="input-field col s6">
        <input id="first_name" type="text" name="rating" class="validate">
        <label for="first_name">Rating</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input id="last_name" type="text" name="review" class="validate">
        <label for="last_name">Review</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input id="last_name" type="text" name="user" class="validate">
        <label for="last_name">User</label>
      </div>
    </div>
    <div class="row">
      <button type="submit" name="action">Create
        <i class="material-icons right"></i>
      </button>
    </div>
  </form>
</div>
